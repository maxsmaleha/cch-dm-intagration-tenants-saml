@using Microsoft.AspNet.Identity;
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Ecommerce demo</title>

    <!-- Bootstrap CSS -->
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/styles.css")
    @Scripts.Render("~/bundles/product-dev")
    @Scripts.Render("~/Scripts/docket-manager-service.js")
    <script>
        function getCookieValue(cookieKey) {
            var value = document.cookie.match('(^|;)\\s*' + cookieKey + '\\s*=\\s*([^;]+)');
            return value ? value.pop() : '';
        }
    </script>
</head>
<body>
    <nav class="navbar sticky-top navbar-expand-lg">
        <div class="container">
            <button class="navbar-brand home btn">Ecommerce Demo Page</button>
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/Ecommerce/Cart">
                        <img src="~/Content/img/cart.svg">
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    @RenderBody()
</body>
</html>